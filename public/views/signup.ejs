    <div id="main">
      <div id="auth-container">
        <form action="" method="POST" id="auth-form">
          <input
            type="text"
            class="auth-input"
            id="username-input"
            placeholder="Enter Email..."
          />
          <input
            type="password"
            class="auth-input"
            id="password-input"
            placeholder="Enter Password..."
          />
          <input
            type="password"
            class="auth-input"
            id="password-confirm"
            placeholder="Confirm Password..."
          />
          <p id="error">Not the same password</p>
          <button class="submitter" type="submit">Sign Up</button>
        </form>
      </div>
    </div>
