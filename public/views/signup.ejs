    <script src="js/auth.js" async defer></script>
  </head>
  <body>
    <div id="nav">
      <a href="/" class="btn" id="logo"></a>
      <a href="" class="btn page" id="calendar"><p class="navp">Calendar</p></a>
      <a href="" class="btn page" id="timer"><p class="navp">Timer</p></a>
      <a href="/login" class="btn" id="login"><p class="navp">Login</p></a>
      <!--<a href="/signup" class="btn" id="signup"><p class="navp">Sign Up</p></a>-->
      <a href="" id="settings"
